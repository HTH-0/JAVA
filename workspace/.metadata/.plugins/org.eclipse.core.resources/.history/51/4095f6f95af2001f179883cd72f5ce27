package Ch02;

public class C02음수 {
	public static void main(String[] args) {

		//	컴퓨터(CPU)는 구조 상 덧셈 연산을 할 수 있다
		// 	뺄셈 연산은 할 수 없다
		  
		//  >> 보수 개념을 도입해서 뺄셈 처리를 한다
		
//		 7 - 4 = 3
//		 7 + 6(10진수에서 4의 보수) = 3(13 에서 앞자리 버림)
//		
//		 77 - 32 = 45
//		 77 + 68 = 45
//		
//		5 - 5 = 0	
//		 00000101 = 5
//		+11111011 = -5(2의 보수) 
//		--------------
//		 000000000 = 0

		
		
	}
}
